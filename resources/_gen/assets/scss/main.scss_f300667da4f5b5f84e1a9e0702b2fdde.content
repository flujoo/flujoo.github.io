body {
  font-family: Avenir, "Helvetica Neue", Helvetica, sans-serif;
  font-size: 16px;
  color: #646464; }

h1, h2, h3, strong {
  color: #111; }

h1 {
  margin-bottom: 15px;
  font-size: 40px; }

h2 {
  font-size: 24px;
  margin-top: 50px; }

.meta {
  font-size: 14px;
  margin-right: 6px; }

.home {
  font-size: 14px;
  font-weight: normal; }

pre {
  padding: 10px;
  overflow: auto;
  font-size: 14px; }

article {
  width: 700px;
  margin: auto;
  margin-top: 100px;
  margin-bottom: 150px; }
  @media screen and (max-width: 700px) {
    article {
      width: 95%;
      margin-top: 50px;
      font-size: 15.2px; }
      article h1 {
        font-size: 36px; }
      article h2 {
        font-size: 21.6px; }
      article .meta, article .home, article pre {
        font-size: 13.3px; } }
header {
  margin-bottom: 30px; }

footer {
  margin-top: 50px; }

hr {
  margin-top: 30px;
  margin-bottom: 30px;
  display: block;
  height: 0px;
  border: 0px;
  border-top: 1px solid #e4e4e4; }

a {
  color: #c2c2c2;
  text-decoration: none;
  -webkit-transition: all 0.2s linear 0s;
  transition: all 0.2s linear 0s; }
  a:hover {
    color: #646464; }

img {
  max-width: 100%; }
